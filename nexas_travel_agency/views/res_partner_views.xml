<?xml version="1.0" encoding="utf-8"?>

<odoo>
  <record id="view_partner_form_inherit_travel" model="ir.ui.view">
    <field name="name">res.partner.form.travel.inherit</field>
    <field name="model">res.partner</field>
    <field name="inherit_id" ref="base.view_partner_form" />
    <field name="arch" type="xml">
      <notebook position="after">
        <button
          name="custom_create_btn"
          type="object"
          string="Save"
          style="
            background-color: black !important;
            color: white;
            padding: 0.5rem 1rem;
            border-radius: 0.5rem;
          "
        ></button>
        <button
          name="action_preview_sale_order"
          type="object"
          string="Preview"
          style="
            background-color: black !important;
            color: white;
            padding: 0.5rem 1rem;
            border-radius: 0.5rem;
          "
        ></button>
      </notebook>
      <group>
        <div>
          <xpath
            style="width: 100%"
            expr="//field[@name='email']"
            position="after"
          >
            <field name="preferences" string="Preferences" />
          </xpath>
        </div>
      </group>
      <xpath
        style="width: 100%"
        expr="//field[@name='preferences']"
        position="after"
      >
        <group position="after">
          <field name="travel_history_ids">
            <tree>
              <field name="trip_id" />
              <field name="booking_date" />
              <field name="status" />
            </tree>
          </field>
        </group>
      </xpath>

      <field name="phone" position="attributes">
        <attribute name="required">1</attribute>
      </field>

      <xpath expr="//div" position="inside">
        <div>hello Harshak</div>
      </xpath>
      <!-- <xpath expr="//div[hasclass('text-muted')]" position="attributes">
                <attribute name="class" add="kanban_img" separator=" "/>
            </xpath> -->
      <!-- <xpath expr="//div[hasclass('text-muted')]" position="attributes">
                <attribute name="class" remove="kanban_img" separator=" "/>
            </xpath> -->
      <!-- <xpath expr="//field[@name='phone']" position="attributes">
        <attribute name="style"
          >background-color:red;border:2px solid;</attribute
        >
      </xpath> -->
      <xpath expr="//field[@name='phone']" position="attributes">
        <attribute name="name">phone</attribute>
      </xpath>
      <xpath expr="//field[@name='phone']" position="attributes">
        <attribute name="string">Phone No.</attribute>
      </xpath>
      <xpath expr="//field[@name='preferences']" position="attributes">
        <attribute name="placeholder">Enter Your preferences</attribute>
      </xpath>
      <xpath expr="//field[@name='travel_history_ids']" position="attributes">
        <attribute name="readonly">1</attribute>
      </xpath>
      <!-- <xpath expr="//sheet" position="inside">
        <notebook>
          <page string="Notebook"> </page>
        </notebook>
      </xpath> -->
      <!-- <xpath expr="//field[@name='mobile']" position="attributes">
        <attribute name="invisible">1</attribute>
      </xpath> -->
    </field>
  </record>
