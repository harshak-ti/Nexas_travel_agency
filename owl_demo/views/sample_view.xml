<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    

    <!-- Tree View for Travel Document -->
    <record id="view_sample_form" model="ir.ui.view">
        <field name="name">sampleform</field>
        <field name="model">sample</field>
        <field name="arch" type="xml">
            
            <form >
                    
              <App/>
         
            </form>
        </field>

    </record>
    <record id="view_sample_tree" model="ir.ui.view">
        <field name="name">sampletree</field>
        <field name="model">sample</field>
        <field name="arch" type="xml">
            
            <tree string="sample" >
                    
                <field name="name"  />
         
                </tree>
        </field>

    </record>



  

   

    <!-- Action for Travel Document -->
    <record id="action_sample" model="ir.actions.act_window">
        <field name="name">sample</field>
        <field name="res_model">sample</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Upload and manage sample.
            </p>
        </field>
    </record>

    
</odoo>